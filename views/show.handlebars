<h1 class="mb-1 restaurant-show-title">{{rst.name}}</h1>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto">

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                {{rst.category}}
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                {{rst.location}}
                <a href="{{rst.google_map}}" class="text-secondary map-link" target="_blank" title="Go to map!">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                </a>
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                {{rst.phone}}
            </p>

            <p class="rst-desc mb-5 mt-3 ms-3">
                {{rst.description}}
            </p>

            <img class="rounded mx-auto d-block mb-4 w-100"
                src="{{rst.image}}" alt="{{rst.name}}"
                style="max-width: 600px;">
        </div>
    </div>
    <div class="text-center mb-5 btn-area">
        <a href="/restaurants/{{rst._id}}/edit" type="button" class="btn btn-warning" title="編輯">Edit</a>
        <a type="button" class="btn btn-dark" title="返回" onclick="history.go(-1)">Back</a>
    </div>
</div>